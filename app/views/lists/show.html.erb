<section class="todoapp">
	<header class="header">
		<h1><%= @list.name %></h1>
		<%= form_for(@list) do |f| %>
		<%= f.text_field :name, :class => "new-todo" %>
		<%= f.submit :style => "display: none" %>
		<% end %>
	</header>
	<section class="main">
		<ul class="todo-list">
			<% @list.items.each do |item| %>
			<li>
        <div class="view">
          <label><%=link_to item.name, item_path(item)%></label>
        </div>
      </li>
			<% end %>
    </ul>
	</section>
	<footer class="footer">
	</footer>
</section>
